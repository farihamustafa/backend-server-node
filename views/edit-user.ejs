<div class="content-wrapper">
  <div class="row">
      <div class="col-lg-12 grid-margin stretch-card">
          <div class="card">
              <div class="card-body">
                  <h4 class="card-title">Edit User Record</h4>
                  <form class="forms-sample" id="update-user" method="post" action="/user/update?_method=PUT">
                      <div class="form-group">
                          <label>Name</label>
                          <input type="text" class="form-control" name="name" value="<%= data.name %>" placeholder="Name" required>
                          <input type="hidden" class="form-control" name="id" value="<%= data._id %>" required>
                      </div>

                      <div class="form-group">
                          <label>Email</label>
                          <input type="email" class="form-control" name="email" value="<%= data.email %>" placeholder="Email" required>
                      </div>

                      <div class="form-group">
                          <label>Password</label>
                          <input type="password" class="form-control" name="password" placeholder="Enter new password (optional)">
                      </div>

                      <button type="submit" class="btn btn-primary me-2">Submit</button>
                      <button type="button" onclick="window.location.href='/user'" class="btn btn-light">Cancel</button>
                  </form>
              </div>
          </div>
      </div>
  </div>
</div>
