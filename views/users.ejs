<div class="content-wrapper">
    <div class="row">
      <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">Users Record</h4>
            <button onclick="window.location.href='/user/create'" class="btn btn-primary">Add User</button>
            <div class="table-responsive pt-3">
              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th> # </th>
                    <th> Name </th>
                    <th> Email </th>
                    <th> Password </th>
                    <th> Actions </th>
                  </tr>
                </thead>
                <tbody>
                  <% data.forEach((item, index) => { %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><%= item.name %></td>
                    <td><%= item.email %></td>
                    <td><%= item.password %></td>
                
                    <td>
                      <a href="/user/<%= item._id %>/edit" class="btn btn-secondary">Edit</a>
                      <button onclick="deleteUser('<%= item._id %>')" class="btn btn-danger">Delete</button>
                    </td>
                  </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    function deleteUser(id){
        fetch('/user/'+id, { method: 'DELETE' })
    .then(() => {alert("user deleted");location.reload();});

    }
  </script>